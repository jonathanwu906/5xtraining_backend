<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
  <h1 class="font-bold text-2xl mb-6 text-gray-900">User Details</h1>
  <div class="mb-4">
    <h2 class="text-lg font-medium text-gray-700">Name</h2>
    <p class="text-gray-900"><%= @user.name %></p>
  </div>
  <div class="mb-4">
    <h2 class="text-lg font-medium text-gray-700">Email</h2>
    <p class="text-gray-900"><%= @user.email %></p>
  </div>
  <div class="mb-4">
    <h2 class="text-lg font-medium text-gray-700">Role</h2>
    <p class="text-gray-900"><%= @user.role %></p>
  </div>
  <div class="flex items-center justify-between">
    <%= link_to 'Back', admin_users_path, class: "inline-block bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
  </div>
</div>
