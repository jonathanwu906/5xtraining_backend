<div class="min-h-screen bg-gray-100 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <h1 class="font-bold text-2xl mb-6 text-gray-900">Edit User</h1>
    <%= form_with model: [:admin, @user], local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div>
        <%= form.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
      </div>
      <div class="flex items-center justify-between">
        <%= form.submit 'Update User', class: "inline-block bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
        <%= link_to 'Back', admin_users_path, class: "inline-block bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
      </div>
    <% end %>
  </div>
</div>
