<div class="container mx-auto py-8 max-w-4xl">
  <h1 class="text-2xl font-bold mb-4 text-center"><%= @task.name %></h1>

  <div class="bg-white p-6 rounded-md shadow-md mb-4">
    <p class="text-gray-700 mb-4"><%= @task.content %></p>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <span class="font-semibold"><%= t('tasks.attributes.start_time') %>:</span>
        <span><%= @task.created_at.strftime("%Y-%m-%d %H:%M:%S") %></span>
      </div>
      <div>
        <span class="font-semibold"><%= t('tasks.attributes.end_time') %>:</span>
        <span><%= @task.end_time.strftime("%Y-%m-%d %H:%M:%S") %></span>
      </div>
      <div>
        <span class="font-semibold"><%= t('tasks.attributes.priority_row') %>:</span>
        <span><%= t("tasks.attributes.priority.#{@task.priority}") %></span>
      </div>
      <div>
        <span class="font-semibold"><%= t('tasks.attributes.status_row') %>:</span>
        <span><%= t("tasks.attributes.status.#{@task.status}") %></span>
      </div>
      <div>
        <span class="font-semibold"><%= t('tasks.attributes.label') %>:</span>
        <span><%= @task.label %></span>
      </div>
    </div>
  </div>

  <div class="flex justify-center space-x-4">
    <%= link_to t('tasks.edit'), edit_task_path(@task), class: "bg-yellow-500 text-white py-2 px-4 rounded hover:bg-yellow-600" %>
    <%= link_to t('tasks.back'), tasks_path, class: "bg-gray-500 text-white py-2 px-4 rounded hover:bg-gray-600" %>
  </div>
</div>
